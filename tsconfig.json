{
  "compilerOptions": {
    "target": "ES2018",
    "module": "Commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "plugins": [
    { "transform": "typescript-transform-paths" },
  ],
  "include": [
    "src/**/*",
  ],
}

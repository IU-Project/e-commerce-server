{
  "compilerOptions": {
    "target": "ES2018",
    "module": "Commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@logger": ["logger/index"],
      "@router": ["router/index"],
      "@config/*": ["config/*"],
      "@exception/*": ["exception/*"],
      "@controller/*": ["controller/*"],
      "@service/*": ["service/*"],
      "@model/*": ["model/*"],
    },
  },
  "plugins": [
    { "transform": "typescript-transform-paths" },
  ],
  "include": [
    "src/**/*",
  ],
}

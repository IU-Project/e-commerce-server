{
  "name": "e-commerce-server",
  "version": "1.0.0",
  "description": "E-commerce API",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register --files ./src/bin/active.ts",
    "build": "tsc && babel dist -d dist",
    "prod": "pm2-runtime start ecosystem.config.js --env production",
    "docker:prod": "docker-compose -f docker-compose.yml",
    "docker:dev": "docker-compose -f docker-compose.dev.yml",
    "docker:test": "docker-compose -f docker-compose.test.yml",
    "unit-test": "jest --forceExit",
    "coverage-test": "jest --coverage --forceExit",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "db": "ts-node -r tsconfig-paths/register --files ./src/bin/db.ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/app-root-path": "^1.2.4",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.26",
    "@types/nodemailer": "^6.4.1",
    "@types/pluralize": "^0.0.29",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.20.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.1",
    "collect.js": "^4.28.6",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "laravel-expressjs-router": "^1.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "pluralize": "^8.0.0",
    "rotating-file-stream": "^2.1.4"
  }
}
